<h2>Add new Celebrity</h2>

<form action="/celebrities" method="POST">
    <label for="name">Name: </label><input type="text" name="name" value="{{name}}"><br>
    <label for="occupation">Occupation: </label><input type="text" name="occupation" value="{{occupation}}"><br>
    <label for="catchPhrase"></label>Catch Phrase: <input type="text" name="catchPhrase" value="{{catchPhrase}}"><br>

    {{#if name}}
        <input type="text" name="id" hidden value="{{_id}}">
        <button type="submit">Edit</button>
    {{else}}
        <button type="submit">Add!</button>
    {{/if}}
</form>