<h2>Add/edit a Movie</h2>

<form action="/movies" method="POST">
    <label for="title">Title: </label><input type="text" name="title" value="{{title}}"><br>
    <label for="genre">Genre: </label><input type="text" name="genre" value="{{genre}}"><br>
    <label for="plot"></label>Plot: <input type="text" name="plot" value="{{plot}}"><br>

    {{#if title}}
        <input type="text" name="id" hidden value="{{_id}}">
        <button type="submit">Edit</button>
    {{else}}
        <button type="submit">Add!</button>
    {{/if}}
</form>